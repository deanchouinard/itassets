<h1>Editing ticket_action</h1>

<% form_for(@ticket_action) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :ticket_id %><br />
    <%= f.hidden_field :ticket_id %>
    <%= @ticket_display_str %>

  </p>
  <p>
    <%= f.label :add_user_id %><br />
    <%= f.hidden_field :add_user_id %>
    <%= @user_display_str %>
  </p>
  <p>
    <%= f.label :action_desc %><br />
    <%= f.text_area :action_desc %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @ticket_action %> |
<%= link_to 'Back', ticket_actions_path %>
