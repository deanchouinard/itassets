<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
 <div>
    <%= f.label :first_name %>:
    <%= f.text_field :first_name, :size => 40 %>
  </div>
  <div>
    <%= f.label :last_name %>:
    <%= f.text_field :last_name, :size => 40 %>
  </div>
  <div>
    <%= f.label :email %>:
    <%= f.text_field :email, :size => 40 %>
  </div>
	<p>
		<%= f.label :admin %><br />
		<%= f.check_box(:admin) %>
	</p>
  <p>
    <%= f.label :hashed_password %><br />
    <%= f.text_field :hashed_password %>
  </p>
  <p>
    <%= f.label :salt %><br />
    <%= f.text_field :salt %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>