<h1>Listing companies</h1>
<table class="list-table" width="250">
  	<tr>
  	  <th>Code</th>
  	  <th>Description</th>
  	  <th> </th>
  	</tr>
	<% @companies.each do |company| %>
  	<tr>
	    <td><%=h company.code %></td>
    	<td><%=h company.description %></td
    	<td class="list-actions">
    		<%= link_to 'Show', company %><br/>
    		<%= link_to 'Edit', edit_company_path(company) %><br/>
    		<%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %>
  		</td>
  	</tr>
	<% end %>
</table>

<br />

<%= link_to 'New company', new_company_path %>


