<h1>New office</h1>

<% form_for(@office) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :company_id %><br />
    <%= f.select(:company_id, @company_list) %>
  </p>
  <p>
    <%= f.label :site_id %><br />
		<%= f.select(:site_id, @site_list) %>

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', offices_path %>